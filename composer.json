{
    "name": "sources/forum",
    "type": "project",
    "description": "Sources.RU forum",
    "license": "MIT",
    "require": {
        "php": ">=5.6",
        "openid/php-openid": "~2.3",
        "filp/whoops": "1.1.*",
        "serafim/asset": "0.*",
        "monolog/monolog": "1.10.0",
        "leafo/scssphp": "0.0.12"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "phpunit/dbunit": "~2.0",
        "squizlabs/php_codesniffer": "~3.4"
    },
    "autoload": {
        "classmap": [
            "app/classes",
            "app/models",
            "app/helpers"
        ],
        "psr-4": {
            "Views\\": [
                "app/views"
            ]
        }
    },
    "scripts": {
        "phpcbf": [
            "vendor/bin/phpcbf --standard=PSR12 --extensions=php app",
            "vendor/bin/phpcbf --standard=PSR12 --extensions=php cron",
            "vendor/bin/phpcbf --standard=PSR12 --extensions=php htdocs",
            "vendor/bin/phpcbf --standard=PSR12 --extensions=php cron"
        ],
        "phpcs": [
            "vendor/bin/phpcs --standard=PSR12 --extensions=php app",
            "vendor/bin/phpcs --standard=PSR12 --extensions=php cron",
            "vendor/bin/phpcs --standard=PSR12 --extensions=php htdocs",
            "vendor/bin/phpcs --standard=PSR12 --extensions=php cron"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
